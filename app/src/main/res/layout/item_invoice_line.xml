<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txv_invoice_line_product"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/txtDirPhar"
        android:textAlignment="textEnd"
        android:layout_below="@id/til_invoice_name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPriceProductLine"
        android:layout_toRightOf="@id/txv_invoice_line_product"
        android:layout_alignBaseline="@id/txv_invoice_line_product"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/txvAmountProductLine"
        android:layout_toRightOf="@id/txtPriceProductLine"
        />


</RelativeLayout>