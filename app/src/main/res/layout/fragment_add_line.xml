<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLineFragment">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:id="@+id/spnProducts"></Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtAmountLine"
        android:textSize="16dp"

        android:layout_toRightOf="@id/spnProducts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvPriceLine"
        android:textSize="16dp"
        android:layout_toRightOf="@id/edtAmountLine"
        android:layout_alignBaseline="@id/edtAmountLine"
        />
</RelativeLayout>
